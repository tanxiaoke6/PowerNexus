# 环境变量配置示例

# ===== 模型配置 =====
# 视觉语言模型路径
VLM_MODEL_PATH=path/to/llava-model
VLM_MODEL_TYPE=llava  # 可选: llava, qwen-vl, internvl

# ===== RAG 配置 =====
# 嵌入模型
EMBEDDING_MODEL=shibing624/text2vec-base-chinese
# 向量数据库类型
VECTOR_DB_TYPE=chroma  # 可选: chroma, faiss
# ChromaDB 持久化路径
CHROMA_PERSIST_DIR=./data/vector_db

# ===== Grid2Op 配置 =====
# 电网案例
GRID2OP_ENV=l2rpn_case14_sandbox
# RL 模型路径
RL_MODEL_PATH=./models/rl/ppo_grid2op.zip

# ===== API 配置 =====
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FILE=./logs/powernexus.log
